<idea-plugin version="2">
  <name>Save ChangeList Patches</name>
  <description>Saves each changelist as a patch in the location set in configuration.</description>
  <version>1.2.3</version>
  <vendor>requiredfieldforsomereason</vendor>
  <idea-version since-build="IU-111.69"/>

  <application-components>
    <!-- Add your application components here -->

  </application-components>

  <project-components>
    <!-- Add your project components here -->
    <component>
      <implementation-class>
        com.benrose.plugins.saveChangeListsToPatches.SaveChangeListsToPatchesApplicationComponent
      </implementation-class>
      <option name="workspace" value="true" />
    </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <action id="SaveChangeListsToPatches"
            class="com.benrose.plugins.saveChangeListsToPatches.SaveChangeListsToPatchesAction"
            text="Save Changelists As Patches" description="Save change lists to patches">
      <add-to-group group-id="VcsGroups" anchor="first"/>
    </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>